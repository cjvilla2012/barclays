<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        />    
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@android:color/darker_gray"
    android:layout_marginTop="1px"
    android:layout_marginBottom="1px"
    />

<ImageView
    android:id="@+id/img_product"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_weight="1"
    android:adjustViewBounds="true"
    android:layout_gravity="center"
    android:src="@+drawable/ic_launcher" 
    />    
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@android:color/darker_gray"
    android:layout_marginTop="1px"
    android:layout_marginBottom="1px"
    />
  
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
        <TextView
        android:id="@+id/end_date_lbl"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/end_date"
        android:textStyle="bold"
        
        /> 

    <TextView
        android:id="@+id/end_date"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />      
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <TextView
        android:id="@+id/earliest_date_lbl"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/earliest_redemption_date"
        android:textStyle="bold"
        
        /> 

    <TextView
        android:id="@+id/redemption_date"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />      
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
        <TextView
        android:id="@+id/avail_lbl"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/available_count"
        android:textStyle="bold"
        /> 

    <TextView
        android:id="@+id/available_count"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />      
</LinearLayout>
</LinearLayout>
</ScrollView>